<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:button="@null"
            android:id="@+id/check_cart_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/cart_list_checkbox_bg_selector"/>
        <ImageView
            android:id="@+id/image_goods"
            android:background="@drawable/gray_button_shape"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="miashu"
                android:id="@+id/text_goods_describe"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="miashu"
                android:id="@+id/text_goods_price"
                android:textColor="@color/title_back_ground"
                android:textSize="@dimen/text_size_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/mall_goods_add"/>
                <TextView
                    android:id="@+id/text_count"
                    android:textSize="@dimen/text_size_large"
                    android:text="1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/mall_goods_minus"/>
                <ImageView
                    android:id="@+id/image_minus"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/cart_list_delete"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mall_delete"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>