<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_about_cow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ll_about"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="关于养牛啦"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle"
                android:text="(养牛啦介绍)"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="帮助与反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle"
                android:text="(养牛啦软件问题，客户问题)"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="个人信息"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_down_load"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="养牛啦app下载"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_custom_service"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_custom_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="客服人员"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_back_out"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/setting_back_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:text="退出"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_background"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:textColor="#99B3C2"
            android:textSize="@dimen/text_size_xlarge"
            android:text="养牛啦软件许可及服务协议"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_xlarge"
            android:text="九牛寨网络科技公司   版权所有"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>