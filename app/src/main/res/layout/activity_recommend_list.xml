<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/title_left_button"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/title_left_black"/>
        <EditText
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/black"
            android:id="@+id/title_edit"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/recommend_edittext_bg_shape"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/recommend_list_type"
            android:divider="@color/color_background"
            android:background="@color/white"
            android:layout_width="80dp"
            android:layout_height="match_parent">

        </ListView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/black"
                android:text="类目"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridView
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="3"
                    android:id="@+id/recommend_grid_goods"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </GridView>
                <TextView
                    android:layout_centerInParent="true"
                    android:text="暂无商品"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textColor="@color/black"
                    android:id="@+id/text_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>