<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:text="添加评论"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/add_evaluate_shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <EditText
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/edit_evaluate"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:checked="true"
            android:id="@+id/button_evaluate_good"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/goods_detail_text_selector"
            android:padding="5dp"
            android:text="好评"
            android:textSize="@dimen/text_size_large"
            android:background="@drawable/goods_detail_selector"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/button_evaluate_normal"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/goods_detail_text_selector"
            android:padding="5dp"
            android:text="中评"
            android:textSize="@dimen/text_size_large"
            android:background="@drawable/goods_detail_selector"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/button_evaluate_feedback"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/goods_detail_text_selector"
            android:padding="5dp"
            android:text="差评"
            android:textSize="@dimen/text_size_large"
            android:background="@drawable/goods_detail_selector"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_confirm"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/green_button_bg_shape"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:text="提交"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>